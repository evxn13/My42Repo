# Auto detect text files and perform LF normalization
* text=auto

# Force bash scripts to always use LF line endings
*.sh text eol=lf
*.bash text eol=lf

# Force batch files to always use CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# Force all text files to use LF
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.css text eol=lf
*.html text eol=lf
*.vue text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf 